<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="center_horizontal" android:orientation="vertical">

    <include
        android:id="@+id/permission_tip_card" android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/oui_view_tipcard_layout" />

    <include
        android:id="@+id/dashboard_chart" android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/oui_layout_dashboard_chart_container" />

    <View
        android:layout_width="fill_parent" android:layout_height="@dimen/sesl_list_subheader_min_height" android:background="?attr/roundedCornerColor"/>

    <de.dlyt.yanndroid.oneui.widget.RoundLinearLayout
        android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@color/item_background_color">
        <rk.android.app.privacydashboard.view.CardView
            android:id="@+id/permission_details_card" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <rk.android.app.privacydashboard.view.CardView
            android:id="@+id/limitations_card" android:layout_width="fill_parent" android:layout_height="wrap_content" app:TitleText="@string/settings_limitation" app:isDividerViewVisible="true" />
    </de.dlyt.yanndroid.oneui.widget.RoundLinearLayout>

    <View
        android:layout_width="match_parent" android:layout_height="@dimen/sesl_list_subheader_min_height" android:background="?attr/roundedCornerColor"/>

    <include
        android:id="@+id/dashboard_footer" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/sesl_list_subheader_min_height" layout="@layout/oui_layout_dashboard_footer" />

</LinearLayout>