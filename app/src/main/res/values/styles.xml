<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- OneUI -->
    <style name="OneUi.PermissionCardView.TitleStyle" parent="@android:style/Widget">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="OneUi.TipCardTextButtonStyle" parent="@android:style/Widget">
        <item name="android:minHeight">36.0dip</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:paddingStart">16.0dip</item>
        <item name="android:paddingEnd">16.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/oui_tipcard_button_bg</item>
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/sesl_primary_text_color</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="OneUi.PermissionFooterBtnStyle" parent="@style/ButtonStyle">
        <item name="android:background">@drawable/oui_permission_button_background</item>
        <item name="android:textAppearance">@style/OneUi.PermissionFooterBtnTextStyle</item>
    </style>
    <style name="OneUi.PermissionFooterBtnTextStyle" parent="@style/ButtonTextStyle">
        <item name="android:textSize">@dimen/oui_permission_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sesl_white</item>
    </style>

    <style name="OneUi.UnclickablePrefTextStyle" parent="@android:style/Widget">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/sesl_dialog_body_text_color</item>
        <item name="android:textColorHighlight">?android:attr/colorControlHighlight</item>
        <item name="android:textColorLink">@color/oui_unclickablepref_link_text_color</item>
        <item name="android:lineSpacingExtra">4.0sp</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
    </style>
</resources>